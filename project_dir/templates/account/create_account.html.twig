{% extends 'base.html.twig' %}

{% block title %}Create Account{% endblock %}

{% block body %}
<div class="app-body">
<h1>Create New Account</h1>

{{ form_start(accountForm) }}
    {{ form_row(accountForm.accountType) }}
    {{ form_row(accountForm.currency) }}
    {{ form_row(accountForm.balance) }}

    <button type="submit" class="btn btn-primary">Create Account</button>
{{ form_end(accountForm) }}

<a href="{{ path('app_client') }}" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>
{% endblock %}
