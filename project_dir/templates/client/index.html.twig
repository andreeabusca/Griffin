{% extends 'base.html.twig' %}

{% block title %}View Clients{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{ path('app_client') }}">Griffin Bank</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link {% if app.request.attributes.get('_route') == 'app_client' %}active{% endif %}" 
             href="{{ path('app_admin') }}">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if app.request.attributes.get('_route') == 'app_profile' %}active{% endif %}" 
             href="{{path('app_profile')}}">Profile</a>
        </li>
         <li class="nav-item">
          <a class="nav-link {% if app.request.attributes.get('_route') == 'app_client' %}active{% endif %}" 
             href="{{ path('app_logout') }}">Logout</a>
        </li>

      </ul>
    </div>
  </div>
</nav>
<div class="app-body">
    <h1>Clients</h1>

    <table class="table center-table">
        <thead>
            <tr>
                <th>Client Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Accounts</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.firstName }} {{ client.lastName }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.phone }}</td>
                <td>
                    {% if client.accounts|length > 0 %}
                        {% for account in client.accounts %}
                            <a href="{{ path('app_account_detail', {id: account.id}) }}">
                                {{ account.accountType }} account ID: {{ account.id }}
                            </a><br>
                        {% endfor %}
                    {% else %}
                        No accounts
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No clients found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
