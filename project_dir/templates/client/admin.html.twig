{% extends 'base.html.twig' %}

{% block title %}Welcome {{admin.firstName}}! {% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{ path('app_admin') }}">Griffin Bank</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link {% if app.request.attributes.get('_route') == 'app_client' %}active{% endif %}" 
             href="{{ path('app_admin') }}">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if app.request.attributes.get('_route') == 'app_profile' %}active{% endif %}" 
             href="{{path('app_profile')}}">Profile</a>
        </li>
         <li class="nav-item">
          <a class="nav-link {% if app.request.attributes.get('_route') == 'app_client' %}active{% endif %}" 
             href="{{ path('app_logout') }}">Logout</a>
        </li>

      </ul>
    </div>
  </div>
</nav>

<div class="app-body">

<table class="table">
  <thead>
    <tr>
      <th scope="col">Actions</th>
     
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><a href="{{ path('app_clients') }}">View Clients</td>
    </tr>
    <tr>
    <td><a href="{{ path('app_accounts') }}">View Accounts</td>
    </tr>
    <tr>
     <td><a href="{{path('app_transactions')}}">View Transactions</td>
    </tr>
    </tr>
  </tbody>
</table>


</div>
{% endblock %}